[ req ]
      default_bits        = 2048
      prompt              = no
      default_md          = sha256
      distinguished_name  = dn
      req_extensions      = v3_ext

      [ dn ]
      C  = EN
      ST = nil
      L  = nil
      O  = MyCompany
      OU = IT
      CN = localhost

      [ v3_ext ]
      subjectAltName = @alt_names

      [ alt_names ]
      DNS.1 = localhost

